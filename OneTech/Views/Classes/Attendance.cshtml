@using OneTech.Models
@model IEnumerable<OneTech.Models.Student>
@{
    ViewBag.Title = "View";
    var i = 0;
}
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body table-responsive">
                <h4 class="card-title">Attendance</h4>
                <table class="table">
                    <thead class="text-primary">
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FullName)
                            </th>
                            <th class="d-none d-sm-table-cell">
                                Class Name
                            </th>
                            <th class="text-center d-none d-xl-table-cell">
                                @Html.DisplayNameFor(model => model.PenaltyLevel)
                            </th>
                            <th class="text-center d-none d-xl-table-cell">
                                Attendance Status
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            i++;
                            <tr>
                                <td>
                                    <b class="text-small">@i</b>
                                </td>

                                <td>
                                    <a class="badge w-100 @(item.StudentStatus == Student.StudentStatusEnum.Active ? "badge-gradient-primary" : "badge-gradient-secondary")
                                            w-100" href="@Url.Action("Details", "Students", new {id = item.Id})">
                                        @Html.DisplayFor(modelItem => item.FullName)
                                    </a>
                                </td>
                                <td class="d-none d-sm-table-cell text-info">
                                    @Html.DisplayFor(modelItem => item.Class.Name)
                                </td>
                                <td class="text-center d-none d-xl-table-cell">
                                    @Html.DisplayFor(modelItem => item.PenaltyLevel)
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#exampleModal" data-whatever="@item.Id">
                                        Confirm
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content bg-white">
            <div class="modal-header border-0">
                <h4 class="modal-title" id="exampleModalLabel">Confirm</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" name="studentId" id="studentId"/>
                    <input type="hidden" name="penaltyLevel" id="penaltyLevel"/>
                    <div class="form-group">
                        <label for="attendanceStatus">Attendance Status</label>

                        <select class="form-control" id="attendanceStatus" name="attendanceStatus">
                            <option value="0">On time</option>
                            <option value="1">Late</option>
                            <option value="2">Absent</option>
                            <option value="0">Late (pre-notice)</option>
                            <option value="0">Absent (pre-notice)</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="penaltyType">Penalty Type</label>

                        <select class="form-control" name="penaltyType" id="penaltyType">
                            <option value="0">Cash</option>
                            <option value="1">Push up</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="currentPenaltyLevel">Current Penalty Level</label>
                        <input type="text" class="form-control" name="currentPenaltyLevel" id="currentPenaltyLevel" readonly="readonly"/>
                    </div>
                    <div class="form-group">
                        <label for="OwedCash">Owe Money</label>
                        <input type="text" class="form-control" name="OwedCash" id="OwedCash" readonly="readonly"/>
                    </div>
                    <div class="form-group">
                        <label for="OwedPushUp">Owe PushUp</label>
                        <input type="text" class="form-control" name="OwedPushUp" id="OwedPushUp" readonly="readonly"/>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-primary confirm-btn" data-dismiss="modal">Confirm</button>
                <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
