@model OneTech.Models.Class

@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-md-8 mx-auto grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Class</h4>
                <p class="card-description">
                    @using (Html.BeginForm("Create","Classes",FormMethod.Post))
                    {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger text-small" })

                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(model => model.Id)
                        @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control mb-2", placeholder = "Id" } })
                        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger text-small" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name)
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control mb-2", placeholder = "Name" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CreatedAt)
                        @Html.EditorFor(model => model.CreatedAt, new { htmlAttributes = new { @class = "form-control mb-2", placeholder = "Create At" } })
                        @Html.ValidationMessageFor(model => model.CreatedAt, "", new { @class = "text-danger text-small" })
                    </div>
                        <input type="submit" class="btn btn-gradient-primary mr-2" value="Create" />
                    <a class="btn btn-light" href="@Url.Action("Index")">
                        Cancel
                    </a>
                    }
</div>
        </div>
    </div>
</div>

